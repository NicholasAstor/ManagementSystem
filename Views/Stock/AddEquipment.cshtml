@model ManagementSystem.Models.Equipment
@using ManagementSystem.Models
@{
    ViewData["Title"] = "Adicionar novo equipamento";
}

<h2 class="mb-4 fw-bold">Adicionar novo equipamento</h2>

<form asp-action="AddEquipment" method="post" enctype="multipart/form-data">
    <div class="row">
        <!-- Coluna Esquerda -->
        <div class="col-md-6">

            <!-- Tipo -->
            <div class="mb-3">
                <label class="form-label">Tipo *</label>
                <select name="Type.Id" class="form-select">
                    <option value="">Escolha o tipo</option>
                    @foreach (ManagementSystem.Models.Type type in (IEnumerable<ManagementSystem.Models.Type>)ViewBag.Types)
                    {
                        <option value="@type.Id" @(Model.Type?.Id == type.Id ? "selected" : "")>@type.Name</option>
                    }

                </select>
            </div>

            <!-- Marca -->
            <div class="mb-3">
                <label class="form-label">Marca *</label>
                <select name="Brand.Id" class="form-select">
                    <option value="">Escolha a marca</option>
                    @foreach (var brand in ViewBag.Brands)
                    {
                        <option value="@brand.Id" @(Model.Brand?.Id == brand.Id ? "selected" : "")>@brand.Name</option>
                    }
                </select>
            </div>

            <!-- Preço -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Preço *</label>
                <input asp-for="Price" class="form-control" placeholder="Escreva o preço" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- SKU -->
            <div class="mb-3">
                <label asp-for="SKU" class="form-label">SKU *</label>
                <input asp-for="SKU" class="form-control" placeholder="Escreva o SKU" />
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>
        </div>

        <!-- Coluna Direita -->
        <div class="col-md-6">
            <!-- Nome -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nome do equipamento *</label>
                <input asp-for="Name" class="form-control" placeholder="Escreva o nome" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Descrição *</label>
                <textarea asp-for="Description" class="form-control" placeholder="Descreva o item" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Especificações -->
            <div class="mb-3">
                <label asp-for="Specifications" class="form-label">Especificações *</label>
                <textarea asp-for="Specifications" class="form-control" placeholder="Detalhe as especificações" rows="3"></textarea>
                <span asp-validation-for="Specifications" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Botões -->
    <div class="d-flex justify-content-end gap-3 mt-4">
        <a asp-action="List" class="btn btn-outline-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
