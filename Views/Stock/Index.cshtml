@model IEnumerable<ManagementSystem.Models.DTOs.FootwearGetAllDTO>

@{
    ViewData["Title"] = "Estoque de Produtos";
}

<h1>@ViewData["Title"]</h1>

<a href="/stock/add" class="btn btn-success mb-3">Cadastrar novo produto</a>

<form asp-action="Index" method="get" class="mb-3 d-flex justify-content-end">
    <input type="text" name="searchTerm" class="form-control w-25 me-2" placeholder="Buscar por nome..." />
    <button type="submit" class="btn btn-outline-primary">Buscar</button>
</form>

<table class="table table-bordered table-striped align-middle text-center">
    <thead class="table-dark">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Preço</th>
        <th>Quantidade</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Footwear.Id</td>
            <td>@item.Footwear.Name</td>
            <td>@item.Footwear.Price.ToString("C")</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Footwear.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Footwear.Id" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este item?');">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>


