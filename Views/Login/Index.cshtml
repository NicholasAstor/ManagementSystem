@model ManagementSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<div class='box blue'>
    <div class='MovimentaDiv'>
        <img src="~/images/Psyduck.png" alt="Psyduck" class="Psyduck" />
        <h1 class='MovimentaTI' style="text-align: center;">MovimentaTI</h1>
    </div>
    <div class='LoginText/Boxes'>
        <div class='bemVindoDiv'>
            <h1 class='bemVindo' style= "text-align: center;">Bem-vindo ðŸ‘‹</h1>
            <h6 class='entreAqui' style= "text-align: center;">Por favor, entre aqui</h6>
        </div>

        <div class="wrapper">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <p>UsuÃ¡rio ou senha invÃ¡lidos. Tente novamente.</p>
                </div>
            }
            <form asp-controller="Login" asp-action="Index" method="post">
                <div class="input-box">
                    <input type="text" placeholder = "Nome" id="User" name="User" required>
                </div>
                <div class="input-box">
                    <input type="password" placeholder = "Senha" id="Senha" name="Senha" required>
                    <input type="checkbox" style="position: absolute;right:20px;top:30%;font-size:20px" onclick="myFunc()">
                    <script>
                        function myFunc() {
                            var x = document.getElementById("Senha");
                            if (x.type === "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }
                    </script>
                </div>
                <div class="Lembrar">
                    <label><input type="checkbox">Lembrar Senha</label>
                </div>
                <button type="submit" class="btn">Entrar</button>
            </form>
        </div>
    </div>
</div>



